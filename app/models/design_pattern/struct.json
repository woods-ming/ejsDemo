                            },
                            {
                                "key": "已有组件的接口 与 正在使用的接口 不同",
                                "description": "无法直接使用"
                            }
                        ]
                    },
                    {
                        "name": "2.思路",
                        "blocks": [
                            {
                                "key": "接口转换",
                                "description": "调用已有组件，实现现有接口"
                            },
                            {
                                "key": "增加中间层",
                                "description": "创建新的类，封装接口转换逻辑"
                            }
                        ]
                    },
                    {
