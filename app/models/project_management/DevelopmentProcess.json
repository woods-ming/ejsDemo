{
    "题目": "软件开发流程",
    "摘要": "了解一个完整软件开发需要经过的流程",
    "关键字": "软件开发流程",
    "正文": {
        "chapters": [
            {
                "name": "一、需求获取阶段",
                "sections": [
                    {
                        "name": "1.采集需求",
                        "blocks": [
                            {
                                "key": "沟通",
                                "description": "通过聊天，了解用户的需求"
                            },
                            {
                                "key": "引导",
                                "description": "分析需求背后的根本问题，引导用户改变不合理的需求"
                            }
                        ]
                    },
                    {
                        "name": "2.讨论需求",
                        "blocks": [
                            {
                                "key": "利益干系人",
                                "description": "理清系统面向的各个人群，分别要为他们解决什么问题"
                            },
                            {
                                "key": "非功能性需求",
                                "description": "系统要达到的性能、伸缩性、可用性、安全性、可扩展性的程度"
                            },
                            {
                                "key": "可行性分析",
                                "description": "能做（存在满足需求的手段） && 能赚（解决方案的成本可接受） && 靠谱（项目风险在可控范围）"
                            }
                        ]
                    },
                    {
                        "name": "3.确定需求",
                        "blocks": [
                            {
                                "key": "反复沟通",
                                "description": "与用户达成一致"
                            },
                            {
                                "key": "梳理",
                                "description": "理清思路，整理成文档"
                            }
                        ]
                    }
                ]
            },
            {
                "name": "二、概要设计阶段",
                "sections": [
                    {
                        "name": "1.分解需求",
                        "blocks": [
                            {
                                "key": "分解",
                                "description": "无数个基本业务需求，组合在一起满足了整体需求"
                            },
                            {
                                "key": "粒度",
                                "description": "一项基本业务需求，其结果可与现实对应"
                            }
                        ]
                    },
                    {
                        "name": "2.分解功能",
                        "blocks": [
                            {
                                "key": "分解",
                                "description": "无数个功能，组合在一起完成了一项基本业务需求"
                            },
                            {
                                "key": "衔接",
                                "description": "针对某项基本业务需求，各个功能之间如何配合"
                            },
                            {
                                "key": "粒度",
                                "description": "一个功能是一个基本页面（可视交互），或一项操作"
                            },
                            {
                                "key": "定义",
                                "description": "该功能具体做什么"
                            },
                            {
                                "key": "去重",
                                "description": "多项基本业务需求分解后，可能包含相同的功能（即：复用了某个功能）"
                            }
                        ]
                    },
                    {
                        "name": "3.开发准备",
                        "blocks": [
                            {
                                "key": "技术选择",
                                "description": "根据项目特点，选择合适的技术"
                            },
                            {
                                "key": "开发环境准备",
                                "description": "选择合适的【编辑器、编译器、调试工具、集成工具、测试工具、发布工具】，合理配置使之正常运行"
                            },
                            {
                                "key": "撰写服务层",
                                "description": "一个服务，对应一项基本业务需求"
                            },
                            {
                                "key": "业务建模",
                                "description": "从面向对象的角度，建立业务模型"
                            },
                            {
                                "key": "数据库设计",
                                "description": "确定要持久化的业务数据：表及表之间的关系"
                            }
                        ]
                    },
                    {
                        "name": "4.搭建程序框架",
                        "blocks": [
                            {
                                "key": "引入第三方类库",
                                "description": "根据经验判断本次开发需要的逻辑，复用市场上现有的产品"
                            },
                            {
                                "key": "引入第三方控件",
                                "description": "根据经验判断本次开发需要的界面元素，复用市场上现有的产品"
                            },
                            {
                                "key": "定义基础设施",
                                "description": "封装第三方类库和控件，并补充框架中的基础逻辑 <br />非功能性组件：异常、日志、数据验证、安全、依赖注入、数据访问 <br />交互逻辑：系统配置（环境变量）、会话信息（用户变量）、权限控制、信息反馈、多国语言 <br />界面元素：模版页、导航菜单、验证码、日期控件、列表控件、上传控件。。。"
                            },
                            {
                                "key": "业务层初步开发",
                                "description": "定义服务并粗略实现 || 定义业务接口 || 粗略实现部分业务逻辑 || 粗略定义数据访问接口"
                            }
                        ]
                    }
                ]
            },
            {
                "name": "三、详细设计阶段",
                "sections": [
                    {
                        "name": "1.细化功能",
                        "blocks": [
                            {
                                "key": "业务方面",
                                "description": "字段的格式验证、逻辑验证，详细流程说明等"
                            },
                            {
                                "key": "交互方面",
                                "description": "提示信息，页面布局等"
                            }
                        ]
                    },
                    {
                        "name": "2.模块开发",
                        "blocks": [
                            {
                                "key": "业务层",
                                "description": "参照详细设计，完整实现服务 || 完整实现业务逻辑 || 完整定义数据访问接口"
                            },
                            {
                                "key": "数据层",
                                "description": "完善数据库字段 || 完整实现数据访问接口 || 预置初始数据（超级管理员等）"
                            },
                            {
                                "key": "表现层",
                                "description": "组织业务接口实现人机交互 || 完成交互界面"
                            }
                        ]
                    },
                    {
                        "name": "3.持续集成",
                        "blocks": [
                            {
                                "key": "静态代码检查",
                                "description": "针对 编码风格（使用StyleCop） || 编译后的逻辑（代码分析） || 可维护性（代码度量值：数值越高越好）"
                            },
                            {
                                "key": "编写单元测试",
                                "description": "针对 核心逻辑 || 复用程度高的逻辑 || 人工测试繁琐的逻辑（数据验证等）"
                            },
                            {
                                "key": "功能冒烟测试",
                                "description": "功能的基本运行正常，不涉及细节"
                            }
                        ]
                    }
                ]
            },
            {
                "name": "四、全面测试阶段",
                "sections": [
                    {
                        "name": "1.单元测试",
                        "blocks": [
                            {
                                "key": "业务方面",
                                "description": "验证业务逻辑是否正确"
                            },
                            {
                                "key": "交互方面",
                                "description": "验证人机交互符合设计"
                            }
                        ]
                    },
                    {
                        "name": "2.集成测试",
                        "blocks": [
                            {
                                "key": "功能衔接",
                                "description": "参照流程设计，验证各个功能之间正确衔接"
                            },
                            {
                                "key": "数据依赖",
                                "description": "参照流程设计，验证数据在功能间正确传递和存储"
                            }
                        ]
                    },
                    {
                        "name": "3.性能测试",
                        "blocks": [
                            {
                                "key": "客户端",
                                "description": "并发用户数、响应时间"
                            },
                            {
                                "key": "服务器",
                                "description": "CPU、内存、IO"
                            }
                        ]
                    },
                    {
                        "name": "4.修改bug",
                        "blocks": [
                            {
                                "key": "业务方面",
                                "description": "调整功能细节"
                            },
                            {
                                "key": "交互方面",
                                "description": "优化界面"
                            }
                        ]
                    }
                ]
            },
            {
                "name": "五、部署上线",
                "sections": [
                    {
                        "name": "1.数据库",
                        "blocks": [
                            {
                                "key": "初始化结构",
                                "description": "针对稳定的库结构，生成Sql脚本"
                            },
                            {
                                "key": "预置数据",
                                "description": "按业务分类，生成Sql脚本"
                            }
                        ]
                    },
                    {
                        "name": "2.网站",
                        "blocks": [
                            {
                                "key": "参数配置",
                                "description": "调整到Release模式（适应生产环境）"
                            },
                            {
                                "key": "部署包",
                                "description": "整合所有资源，编译生成部署包"
                            }
                        ]
                    },
                    {
                        "name": "3.服务器",
                        "blocks": [
                            {
                                "key": "部署数据库",
                                "description": "按次序执行所有Sql脚本"
                            },
                            {
                                "key": "部署网站",
                                "description": "网站虚拟目录指向Ftp后的部署包，配置Web服务器的相关参数（连接字符串等）"
                            }
                        ]
                    }
                ]
            },
            {
                "name": "六、产品交付",
                "sections": [
                    {
                        "name": "1.培训",
                        "blocks": [
                            {
                                "key": "现场演示",
                                "description": "面对面操作软件，引导用户了解大致的使用流程"
                            },
                            {
                                "key": "用户手册",
                                "description": "系统的使用帮助，交给用户深入学习操作细节"
                            },
                            {
                                "key": "客户服务",
                                "description": "公司的客服人员，解答用户偶尔遇到的疑惑"
                            }
                        ]
                    },
                    {
                        "name": "2.维护",
                        "blocks": [
                            {
                                "key": "问题修复",
                                "description": "在使用过程中发现的bug，须立即修复"
                            },
                            {
                                "key": "需求变化",
                                "description": "用户变更需求，进行需求确认后更改软件"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "注释": [
        "1.",
        "2."
    ],
    "参考文献": [
    ]
}