<?xml version="1.0" encoding="UTF-8"?>
<beans 
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd" >
        
    <!-- 导入其它配置文件（分模块管理配置） -->
    <import resource="beanContext.xml" />


    <!-- 使用 无参构造函数 -->
    <bean id="bean1" class="com.imooc.Bean1" parent="BaseClass"
          init-method="start" destroy-method="stop" />
	
    <!-- 使用 有参构造函数并注入属性 -->
    <bean id="beanFactory" class="com.immoc.BeanFactory">
        <constructor-arg index="0" value="我是实例工厂" />
        <property name="属性名称" ref="bean1" />
    </bean>

    <!-- 使用 静态工厂 -->
    <bean id="bean3" class="com.immoc.BeanFactory" factory-method="getInstance" />

    <!-- 使用 实例工厂 -->
    <bean id="bean4" factory-bean="beanFactory" factory-method="createInstance" >
        <constructor-arg index="0" value="test" />
    </bean>

 </beans>