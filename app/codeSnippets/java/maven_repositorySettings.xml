<!-- Maven根目录/conf/settings.xml -->

<!-- 为加速访问，设置为国内的镜像服务器（使用 mirrors 搜索，并增加下列配置） -->
<mirror>
  <id>alimaven</id>
  <name>aliyun maven</name>
  <url>http://maven.aliyun.com/nexus/content/groups/public/</url>
  <mirrorOf>central</mirrorOf>        
</mirror>

<!-- 修改本地仓库的位置（使用 localRepository 搜索，并增加下列配置） -->
<localRepository>H:\maven_temp</localRepository>

<!-- 将修改后的 settings.xml 文件复制到 本地仓库根目录 -->